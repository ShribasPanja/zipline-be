generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PipelineStatus {
  QUEUED
  IN_PROGRESS
  SUCCESS
  FAILED
}

model PipelineRun {
  id                 String         @id @default(cuid())
  executionId        String         @unique
  jobId              String?
  repoName           String
  repoFullName       String?
  repoUrl            String
  branch             String?
  status             PipelineStatus @default(QUEUED)
  triggerCommitId    String?
  triggerMessage     String?
  triggerAuthorName  String?
  triggerAuthorEmail String?
  triggerUserId      String? // GitHub user ID who triggered the pipeline
  triggerUserLogin   String? // GitHub username who triggered the pipeline  
  queuedAt           DateTime       @default(now())
  startedAt          DateTime?
  finishedAt         DateTime?
  durationMs         Int?
  logsUrl            String?
  errorMessage       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  logs PipelineLog[]

  @@map("pipeline_runs")
}

model PipelineLog {
  id        String      @id @default(cuid())
  runId     String
  run       PipelineRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  timestamp DateTime    @default(now())
  level     String      @default("info")
  message   String
  step      String?

  @@index([runId])
  @@map("pipeline_logs")
}

model RepositoryOwner {
  id           String   @id @default(cuid())
  repoFullName String   @unique // e.g., "owner/repo"
  userId       String // GitHub user ID who set up the webhook
  userLogin    String // GitHub username who set up the webhook
  userName     String? // GitHub display name
  userEmail    String? // GitHub email
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([repoFullName])
  @@map("repository_owners")
}

model RepositorySecret {
  id           String   @id @default(cuid())
  repoFullName String // e.g., "owner/repo"
  key          String // Secret name (e.g., "NPM_TOKEN")
  value        String // Encrypted secret value
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([repoFullName, key])
  @@index([repoFullName])
  @@map("repository_secrets")
}
