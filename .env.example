# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# GitHub Webhook Security
# Generate a random secret for webhook signature validation
# You can use: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password (if using authentication)

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Webhook Configuration
WEBHOOK_URL=http://localhost:3001/api/webhook/github

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Docker Configuration
# DOCKER_HOST=unix:///var/run/docker.sock

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Pipeline Configuration
# PIPELINE_TIMEOUT=300000
# TEMP_DIR=/tmp/zipline-pipelines
